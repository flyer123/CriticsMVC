<body>
    <div class="page">
        <!--========================================================
                                  HEADER
        =========================================================-->
        <header>
            <link rel="icon" href="images/favicon.ico" type="image/x-icon">
            <div id="stuck_container" class="stuck_container">
                <div class="container">
                    <div class="brand">
                        <span class="logo flaticon-heart183"></span>
                        <h1 class="brand_name">
                            <a href="./">Ресторанный гид <br><span>Антона Эго</span></a>
                        </h1>
                        <p class="brand_slogan">
                            Честно и профессионально о ресторанах
                        </p>
                    </div>

                    <div class="header-right">
                        <nav class="nav">
                            <ul class="sf-menu" data-type="navbar">
                                <li>
                                    @Html.ActionLink("Главная", "Index", "Home")
                                </li>
                                <li>
                                    @Html.ActionLink("Рейтинг ресторанов", "Rating", "Home")
                                </li>
                                <li>
                                    @Html.ActionLink("Блог", "Blog", "Home")
                                </li>
                                @*<li>
                                    @Html.ActionLink("Войти", "Login", "Account")
                                </li>*@
                                <li>
                                    @Html.ActionLink("Контакты", "Contacts", "Home")
                                </li>
                            </ul>
                        </nav>
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <p>Привет @User.Identity.GetUserName() </p>
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
                                    <li> @Html.ActionLink("Меню администратора", "AdminMenu", "Admin")</li>
                                </ul>
                            }
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li> @Html.ActionLink("Войти", "Login", "Account")</li>
                                <li> @Html.ActionLink("Зарегистрироваться", "Register", "Account")</li>
                            </ul>
                        }
                            @using (Html.BeginForm("Search", "Home", null, FormMethod.Post, new { @class = "search-form"}))
                            {
                                <p class="search-form_label">
                                @Html.TextBox("word", null, new { @class = "search-form_input", @placeholder = "Поиск ресторана" })
                                </p>
                                <button class="search-form_submit fa-search" type="submit"></button>
                            }
                    </div>

                </div>
            </div>
        </header>
        @*<div class="body-content">*@
